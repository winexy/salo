<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Salo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
    </style>

    <style name="FormInputButton" parent="Widget.AppCompat.Button">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FormButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/input_button_bg</item>
        <item name="android:elevation">10dp</item>
    </style>

</resources>